<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxl.lazy.mapper.UserMapper">

    <resultMap id="moreForOne" type="com.hxl.lazy.entity.User">
        <!-- 指定主键可以提升效率 -->
        <id property="userId" column="user_id"/>

        <!-- 指定其它属性 -->
        <result property="username" column="username"/>

        <!-- 多对一关联 -->
        <!-- select属性定义子查询对应的接口方法的全限定名:  namespace.id -->
        <association property="course" column="course_id" javaType="com.hxl.lazy.entity.Course"
                     select="com.hxl.lazy.mapper.CourseMapper.getCourse"
                     fetchType="lazy"/>
    </resultMap>
    
    <select id="getUserInfo" resultMap="moreForOne">
        select user_id, username, course_id
        from t_user
        where user_id = #{userId}
    </select>

    <select id="queryUserInfo" resultType="com.hxl.lazy.entity.User">
        select *
        from t_user
        where course_id = #{courseId}
    </select>
</mapper>